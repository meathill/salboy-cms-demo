@import "../variable.styl"

#header
  border-bottom 1px solid #EEE

  .navbar-brand
    display flex
    align-items center
    padding 0

    .icon
      background-color $vi-color
      border-radius 50%
      color white
      padding 0
      width 1.75em
      height 1.75em
      line-height 1.75em
      text-align center
      margin-right .5em

    img
      display block
      height 1.75rem
      position relative
      margin-right .5rem

#sub-header
  background-color $vi-color
  height 3.5rem
