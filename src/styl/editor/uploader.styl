.uploader
  width 100%
  height 100%
  position relative

  input
    display none

  label
    margin-bottom 0

  .preview
    position absolute
    z-index 1
    width 100%
    height 100%

    img
      width 100%
      height 100%
      object-fit cover

  .uploading
    background-color rgba(black, .9)
    color white
    position absolute
    left 0
    bottom 0
    right 0

  .uploader-inner
    display flex
    justify-content center
    align-items center
    height 100%
    position relative
    z-index 5

    > .p-3
      display flex
      flex-direction column
      background-color rgba(black, .75)
