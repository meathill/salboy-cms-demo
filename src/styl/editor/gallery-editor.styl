.gallery-editor
  img
    display block

  .gallery-top
    width 100%
    padding-bottom 57.9710145%
    position relative

    .swiper-wrapper
      position absolute
      top 0
      left 0
      width 100%
      height 100%

    .swiper-slide
      height 100%

    img
      width 100%
      max-height 100%
      object-fit cover

  .gallery-thumbnails
    margin-top .5rem

    .swiper-slide
      background-color #333
      position relative
      width 148px
      height 111px

      + .swiper-slide
        margin-left 1rem

    .form-group
      background-color rgba(black, .75)
      position absolute
      left 0
      width 100%
      bottom 0
      margin-bottom 0

      input
        background-color transparent
        border none
        color white
        display block

    .delete-button
      border none
      position absolute
      top 0
      right 0
      width 2em

    img
      width 100%
      height 100%
      object-fit cover
