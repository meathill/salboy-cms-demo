.uploader
  width 100%
  height 100%

  input
    display none

  label
    margin-bottom 0

  .preview
    position absolute
    z-index 1

    img
      max-width 100%
      max-height 100%

  .uploader-inner
    display flex
    justify-content center
    align-items center
    height 100%
    position relative
    z-index 5

    > .p-3
      display flex
      flex-direction column
      background-color rgba(black, .75)
