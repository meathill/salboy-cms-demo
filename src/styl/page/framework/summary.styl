.summary
  display flex
  margin-top 1rem

.summary-info
  flex 1

  h1.summary-title
    font-size 2.5rem

  .address
    font-size 1.125rem
    font-weight 100
    margin-bottom 1.6em

  .info
    font-size 1.25rem
    line-height 1.75
    margin-bottom 1.5em

.summary-details
  display flex
  font-size 1.25rem
  flex-wrap wrap
  margin-bottom 0

  dt
    font-weight 100
    width 5em

  dd
    flex 1 1 calc(50% - 5em)

.summary-aside
  display flex
  flex-direction column
  width 22.5rem
  margin-left 1.875rem

  .sales,
  .owner
    background-color white

    p
      margin-bottom 0

  h5
    font-size 1.25rem

  .owner
    display flex
    flex-direction column
    flex 1
    margin-top 1rem

  .register-button
    background-color #FF0034
    display flex
    justify-content center
    align-items center
    font-size 1.5rem
    height 70px
    margin-top auto
