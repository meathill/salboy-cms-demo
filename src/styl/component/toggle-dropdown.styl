.navbar-toggle-checkbox,
.dropdown-toggle-checkbox
  display none

  &:checked ~
    .dropdown-menu,
    .navbar-collapse
      display block

.nav,
.navbar-nav
  .dropdown-toggle
    margin-bottom 0

#sidebar
  .dropdown-toggle
    &::after
      display none

    .fa-chevron-up
      display none

  .dropdown-menu
    position static
    border 1px solid $vi-color
    border-top none
    border-radius 0 0 .25rem .25rem
    width 100%
    margin-top 0

  .dropdown-toggle-checkbox:checked
    + .dropdown-toggle
      background-color $vi-color
      color white

      .fa-chevron-down
        display none

      .fa-chevron-up
        display block
